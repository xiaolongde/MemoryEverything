/* pages/add-link/add-link.wxss */

.page-container {
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 160rpx;
  background-color: #f5f5f5;
}

.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* URL 输入 */
.url-input-wrap {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 4rpx 4rpx 4rpx 20rpx;
}

.url-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
}

.paste-btn {
  padding: 16rpx 28rpx;
  background-color: #e6f7ff;
  color: var(--primary-color);
  border-radius: 8rpx;
  font-size: 26rpx;
}

.parse-btn {
  margin-top: 20rpx;
  text-align: center;
  padding: 20rpx;
  background-color: var(--primary-light);
  color: var(--primary-color);
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  color: #999;
  font-size: 32rpx;
}

/* AI 分类设置 */
.ai-section {
  padding: 20rpx 24rpx;
}

.ai-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.ai-info {
  display: flex;
  flex-direction: column;
}

.ai-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.ai-desc {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 保存按钮 */
.save-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  background-color: var(--primary-color);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
}

.save-btn:active {
  opacity: 0.8;
}

.save-btn[disabled] {
  background-color: #ccc;
}
