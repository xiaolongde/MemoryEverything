/* pages/organize/organize.wxss */
/* 整理页样式 */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 统计头部 */
.stats-header {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats-content {
  color: #fff;
}

.stats-title {
  font-size: 28rpx;
  opacity: 0.9;
}

.stats-number {
  margin-top: 12rpx;
}

.stats-number .number {
  font-size: 64rpx;
  font-weight: 600;
}

.stats-number .unit {
  font-size: 28rpx;
  margin-left: 8rpx;
  opacity: 0.9;
}

.stats-icon {
  width: 100rpx;
  height: 100rpx;
  opacity: 0.8;
}

/* 待整理提示 */
.pending-section {
  margin: 20rpx;
  background-color: #fffbe6;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1rpx solid #ffe58f;
}

.pending-info {
  display: flex;
  align-items: center;
}

.pending-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.pending-text {
  font-size: 28rpx;
  color: #d48806;
}

.pending-arrow {
  font-size: 36rpx;
  color: #d48806;
}

/* 区块 */
.section {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-count {
  font-size: 24rpx;
  color: #999;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.category-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 12rpx;
  transition: transform 0.2s;
}

.category-item:active {
  transform: scale(0.98);
}

.category-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.category-icon text {
  font-size: 36rpx;
}

.category-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.category-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.category-count {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 标签云 */
.tag-cloud {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  transition: all 0.2s;
}

.tag-item:active {
  background-color: #e6f7ff;
}

.tag-name {
  color: #333;
}

.tag-count {
  margin-left: 8rpx;
  font-size: 22rpx;
  color: #999;
  background-color: #e8e8e8;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
}

/* 空提示 */
.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: #999;
}
