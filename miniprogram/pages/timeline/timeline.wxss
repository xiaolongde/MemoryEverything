/* pages/timeline/timeline.wxss */
/* 动态页 - 时间线流水账样式 */

.page-container {
  min-height: 100vh;
  background-color: #ededed;
  padding-bottom: 140rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 16rpx 20rpx;
  background-color: #ededed;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  opacity: 0.5;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 时间线列表 */
.timeline-list {
  padding: 0 20rpx;
}

.timeline-item {
  margin-bottom: 16rpx;
}

/* 卡片通用样式 */
.item-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.type-badge {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.type-badge.link {
  background-color: #e6f7ff;
  color: #1890ff;
}

.type-badge.note {
  background-color: #fff7e6;
  color: #fa8c16;
}

.type-badge .mood {
  margin-left: 8rpx;
}

.time {
  font-size: 22rpx;
  color: #999;
}

/* 链接卡片 */
.card-body {
  display: flex;
}

.link-content {
  flex: 1;
  min-width: 0;
  margin-right: 16rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.url {
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.thumbnail {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

/* 点评预览 */
.comment-preview {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background-color: #fffbe6;
  border-radius: 8rpx;
  border-left: 4rpx solid #faad14;
}

.comment-label {
  font-size: 22rpx;
  color: #999;
}

.comment-text {
  font-size: 24rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 感悟卡片 */
.note-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.note-images {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.note-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.more-images {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

/* 标签 */
.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.tag {
  font-size: 22rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 150rpx 40rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态和没有更多 */
.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 998;
}

/* 悬浮按钮容器 */
.fab-container {
  position: fixed;
  right: 40rpx;
  bottom: 180rpx;
  z-index: 999;
}

/* 悬浮菜单 */
.fab-menu {
  position: absolute;
  bottom: 120rpx;
  right: 0;
  opacity: 0;
  transform: scale(0.8) translateY(20rpx);
  transition: all 0.25s ease;
  pointer-events: none;
}

.fab-menu.show {
  opacity: 1;
  transform: scale(1) translateY(0);
  pointer-events: auto;
}

.fab-menu-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 28rpx;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  white-space: nowrap;
}

.fab-menu-item:active {
  background-color: #f5f5f5;
}

.fab-menu-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.fab-menu-text {
  font-size: 28rpx;
  color: #333;
}

/* 主悬浮按钮 */
.fab-btn {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.4);
  transition: all 0.25s ease;
}

.fab-btn.active {
  transform: rotate(45deg);
  background: linear-gradient(135deg, #ff4d4f, #ff7875);
}

.fab-btn:active {
  transform: scale(0.95);
}

.fab-btn.active:active {
  transform: rotate(45deg) scale(0.95);
}

.fab-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
  line-height: 1;
}
