/* pages/category/category.wxss */

.page-container {
  min-height: 100vh;
  padding: 20rpx;
}

.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.category-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 12rpx;
  transition: transform 0.2s;
}

.category-item:active {
  transform: scale(0.98);
}

.category-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.category-icon text {
  font-size: 36rpx;
}

.category-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.category-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.category-count {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 标签云 */
.tag-cloud {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  color: #666;
  transition: all 0.2s;
}

.tag-item:active {
  background-color: var(--primary-light);
  color: var(--primary-color);
}

/* 空提示 */
.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}
