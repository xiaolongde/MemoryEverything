/* pages/category-detail/category-detail.wxss */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.count {
  font-size: 26rpx;
  color: #999;
}

.list {
  padding: 20rpx;
}

.list > view {
  margin-bottom: 20rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 60rpx;
  color: #999;
}
