/* pages/link-detail/link-detail.wxss */

.page-container {
  min-height: 100vh;
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 链接卡片 */
.link-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.thumbnail {
  width: 100%;
  height: 360rpx;
}

.link-info {
  padding: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.meta {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.source {
  font-size: 24rpx;
  color: var(--primary-color);
  background-color: var(--primary-light);
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.tag {
  font-size: 22rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.category-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.category-tag {
  font-size: 24rpx;
  color: #fff;
  background-color: var(--primary-color);
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
}

.summary {
  background-color: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.summary-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 操作按钮 */
.actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx 0;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.action-btn.active {
  color: var(--primary-color);
}

.action-btn.delete {
  color: #ff4d4f;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

/* 点评区域 */
.comment-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.rating-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.rating-stars {
  display: flex;
}

.star {
  font-size: 48rpx;
  color: #ddd;
  margin-right: 8rpx;
}

.star.active {
  color: #faad14;
}

.comment-input-wrap {
  position: relative;
  margin-bottom: 24rpx;
}

.comment-input {
  width: 100%;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 22rpx;
  color: #999;
}

.save-btn {
  width: 100%;
  background-color: var(--primary-color);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
}

.save-btn:active {
  opacity: 0.8;
}

/* AI 深度解读区域 */
.ai-insight-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.generate-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.generate-icon {
  margin-right: 8rpx;
}

/* 生成中状态 */
.insight-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
  animation: spin 2s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* AI 解读内容 */
.insight-content {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.insight-block {
  margin-bottom: 32rpx;
}

.insight-block:last-child {
  margin-bottom: 0;
}

.block-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

/* 核心观点 */
.key-points {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.key-point-item {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 12rpx;
  padding: 20rpx;
}

.point-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.point-number {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #667eea;
  color: #fff;
  border-radius: 50%;
  font-size: 22rpx;
  font-weight: 600;
  margin-right: 12rpx;
}

.point-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.point-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

/* 深度洞察 */
.insights-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.insight-item {
  background-color: #fafbfc;
  border-left: 4rpx solid #667eea;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
}

.insight-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #667eea;
  display: block;
  margin-bottom: 8rpx;
}

.insight-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

/* 思考问题 */
.questions-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.question-item {
  display: flex;
  align-items: flex-start;
  background-color: #fff8e1;
  border-radius: 8rpx;
  padding: 16rpx;
  cursor: pointer;
}

.question-item:active {
  background-color: #fff3cd;
}

.question-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.question-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

.tip-text {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  padding: 8rpx 0;
}

/* 降级提示 */
.fallback-tip {
  background-color: #fff3cd;
  border-radius: 8rpx;
  padding: 16rpx;
  text-align: center;
  font-size: 24rpx;
  color: #856404;
  margin-top: 16rpx;
}

/* 点评区域 */
.comment-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
}

.assist-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 30rpx;
  font-size: 22rpx;
}

.assist-icon {
  margin-right: 6rpx;
}

/* AI 点评建议弹窗 */
.suggestions-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  animation: fadeIn 0.3s ease-in;
}

.suggestions-content {
  width: 100%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  overflow-y: auto;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 36rpx;
  color: #999;
  border-radius: 50%;
  background-color: #f5f5f5;
}

/* 建议加载中 */
.suggestions-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

/* 建议列表 */
.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.suggestion-card {
  background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.suggestion-card:active {
  background: linear-gradient(135deg, #e8ecf1 0%, #dce3eb 100%);
  border-color: #667eea;
  transform: scale(0.98);
}

.suggestion-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.suggestion-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.suggestion-angle {
  font-size: 26rpx;
  font-weight: 600;
  color: #667eea;
}

.suggestion-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.7;
  display: block;
  margin-bottom: 12rpx;
}

.suggestion-action {
  display: flex;
  justify-content: center;
  padding-top: 12rpx;
  border-top: 1rpx dashed #d0d0d0;
}

.action-text {
  font-size: 22rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  padding: 100rpx;
  color: #999;
}
