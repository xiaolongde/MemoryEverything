/* pages/link-detail/link-detail.wxss */

.page-container {
  min-height: 100vh;
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 链接卡片 */
.link-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.thumbnail {
  width: 100%;
  height: 360rpx;
}

.link-info {
  padding: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.meta {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.source {
  font-size: 24rpx;
  color: var(--primary-color);
  background-color: var(--primary-light);
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.tag {
  font-size: 22rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.category-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.category-tag {
  font-size: 24rpx;
  color: #fff;
  background-color: var(--primary-color);
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
}

.summary {
  background-color: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.summary-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 操作按钮 */
.actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx 0;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.action-btn.active {
  color: var(--primary-color);
}

.action-btn.delete {
  color: #ff4d4f;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

/* 点评区域 */
.comment-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.rating-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.rating-stars {
  display: flex;
}

.star {
  font-size: 48rpx;
  color: #ddd;
  margin-right: 8rpx;
}

.star.active {
  color: #faad14;
}

.comment-input-wrap {
  position: relative;
  margin-bottom: 24rpx;
}

.comment-input {
  width: 100%;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 22rpx;
  color: #999;
}

.save-btn {
  width: 100%;
  background-color: var(--primary-color);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
}

.save-btn:active {
  opacity: 0.8;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  padding: 100rpx;
  color: #999;
}
