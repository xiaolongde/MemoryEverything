/* pages/index/index.wxss */

.page-container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 分类筛选 */
.category-scroll {
  background-color: #fff;
  padding: 0 20rpx;
  white-space: nowrap;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-list {
  display: inline-flex;
  padding: 20rpx 0;
}

.category-item {
  padding: 12rpx 28rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.category-item.active {
  color: #fff;
  background-color: var(--primary-color);
}

/* 链接列表 */
.link-list {
  padding: 20rpx;
}

/* 空状态 */
.empty-state {
  padding-top: 200rpx;
}

.empty-state image {
  width: 240rpx;
  height: 240rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #bbb;
  margin-top: 16rpx;
}

/* 加载状态和没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.4);
}

.add-btn image {
  width: 48rpx;
  height: 48rpx;
}

.add-btn:active {
  transform: scale(0.95);
}
