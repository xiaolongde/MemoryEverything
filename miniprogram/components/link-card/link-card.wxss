/* components/link-card/link-card.wxss */

.link-card {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.thumbnail {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.content {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.meta {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.source {
  font-size: 22rpx;
  color: var(--primary-color);
  background-color: var(--primary-light);
  padding: 2rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.category {
  font-size: 22rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 2rpx 12rpx;
  border-radius: 4rpx;
}

/* 点评预览 */
.comment-preview {
  background-color: #fffbe6;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  border-left: 4rpx solid #faad14;
}

.comment-rating {
  margin-bottom: 4rpx;
}

.comment-rating .star {
  font-size: 20rpx;
  color: #faad14;
}

.comment-text {
  font-size: 22rpx;
  color: #666;
}

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 20rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.favorite {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  font-size: 28rpx;
}
