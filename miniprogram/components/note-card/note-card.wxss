/* components/note-card/note-card.wxss */

.note-card {
  padding: 24rpx;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.mood {
  margin-right: 12rpx;
}

.mood-emoji {
  font-size: 32rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.content {
  margin-bottom: 16rpx;
}

.text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 图片 */
.images {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}

.image.single {
  width: 300rpx;
  height: 300rpx;
}

.more-images {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

/* 标签 */
.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  color: var(--primary-color);
  background-color: var(--primary-light);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}
